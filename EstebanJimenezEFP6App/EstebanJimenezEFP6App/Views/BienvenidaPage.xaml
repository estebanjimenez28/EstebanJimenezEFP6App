<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EstebanJimenezEFP6App.Views.BienvenidaPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50, 25, 50,25" >


            <Button x:Name="BtnLogin" Text="INGRESAR" BackgroundColor="DarkGreen" CornerRadius="15" Clicked="BtnLogin_Clicked" />
            <Button Grid.Column="0" Grid.Row="0"
                            x:Name="BtnVerPreguntas" Text="Ver Preguntas"
                            BackgroundColor="DarkRed" TextColor="White"
                            HeightRequest="80" WidthRequest="50"
                            CornerRadius="25" BorderColor="#B6B4B4" BorderWidth="2"
                            Clicked="BtnVerPreguntas_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>