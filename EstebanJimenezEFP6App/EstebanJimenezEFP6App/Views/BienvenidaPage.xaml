<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EstebanJimenezEFP6App.Views.BienvenidaPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50, 25, 50,25" >

            <Entry x:Name="TxtUserName" Placeholder="USUARIO" FontSize="30" Keyboard="Email" TextColor="#0C0A0A"/>

            <Entry x:Name="TxtPassword" Placeholder="CONTRASEÑA" FontSize="30" 
                   Keyboard="Default" IsPassword="True" />

            <Switch x:Name="SwShowPassword" IsToggled="False" />

            <Button x:Name="BtnLogin" Text="INGRESAR" BackgroundColor="DarkGreen" CornerRadius="15" Clicked="BtnLogin_Clicked" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>